# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files (do not trim trailing whitespace, which can affect formatting)
[*.{md,markdown}]
trim_trailing_whitespace = false

# Go source files
[*.go]
indent_style = tab
indent_size = 4